
@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>


    <div class="card-text p-1"><b>Author:</b> @Model.Author</div>
    <div class="card-text p-1"><b>Publisher: </b>@Model.Publisher</div>
    <div class="card-text p-1"><b>ISBN: </b>@Model.Isbn</div>
    <div class="card-text p-1"><b>Classification: </b>@Model.Classification</div>
    <div class="card-text p-1"><b>Category: </b>@Model.Category</div>
    <div class="card-text p-1"><b>Number of Pages:</b> @Model.PageCount</div>

    <form method="post" asp-page="/ShoppingCart">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-right">Add to Cart</button>
        </span>
    </form>
@*Here I added some bootsrap to add an image to the bottom of my card*@
    <br />
    <img src="~/lib/twitter-bootstrap/img/rasmus-smedstrup-mortensen-_ZtPsxAomeI-unsplash.jpg" class="card-img-bottom" height="200"/>
</div>

